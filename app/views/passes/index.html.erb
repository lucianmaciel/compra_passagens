<h1>Lista de Passagens</h1>

<table>
  <tr>
    <th>Assento</th>
    <th>Valor da Passagem</th>
    <th>Id do Voo</th>
    <th>Origem</th>
    <th>Destino</th>
    <th>Cliente</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @passes.each do |pass| %>
  <tr>
    <td><%= pass.assento %></td>
    <td>R$<%= pass.valor %></td>
    <td><%= pass.fly.codigo %></td>
    <td><%= pass.fly.origem %></td>
    <td><%= pass.fly.destino %></td>
    <td><%= pass.client.nome %></td>
    <td><%= link_to '[Mostrar Detalhes]', pass %></td>
    <td><%= link_to '[Editar]', edit_pass_path(pass) %></td>
    <td><%= link_to '[Apagar]', pass, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

